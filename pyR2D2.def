Bootstrap: docker
From: condaforge/miniforge3:latest

%labels
    Author Hideyuki Hotta
    Version v0.1.0

%environment
    export PROMPT_COMMAND='PS1="\[\e[1;33m\](sing):\h:\[\e[0;36m\]\w# \[\e[m\]"'

%post
    # conda install
    mamba update -y conda
    mamba update --all
    mamba install -y ipython matplotlib-base pyqt numpy opencv cartopy astropy sunpy gspread oauth2client
    mamba clean -a
    
    # apt install
    apt -y update && apt -y install x11-apps git gfortran build-essential rsync openssh-client

    # pyR2D2 installation
    mkdir -p /opt/source
    cd /opt/source
    git clone https://github.com/hottahd/pyR2D2.git
    cd pyR2D2
    pip install . 
