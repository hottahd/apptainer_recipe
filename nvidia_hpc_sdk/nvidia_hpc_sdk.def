Bootstrap: docker
From: nvcr.io/nvidia/nvhpc:24.11-devel-cuda_multi-ubuntu22.04

%post
    apt-get update && apt-get install -y \
        build-essential \
        python3 python3-pip
    echo "HPC SDK environment set up."

%environment
    export PATH=/opt/nvidia/hpc_sdk/Linux_x86_64/23.1/compilers/bin:$PATH
    export LD_LIBRARY_PATH=/opt/nvidia/hpc_sdk/Linux_x86_64/23.1/compilers/lib:$LD_LIBRARY_PATH

%runscript
    echo "HPC SDK container ready. Run your commands!"